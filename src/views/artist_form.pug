extends layout

block link

block content
  h1= title
  div
    form(method="POST" enctype="multipart/form-data" class="flex flex-col gap-3 p-4")
      label Name:*
        | 
        input(id="name" type="text", name="name" placeholder="Enter artist name" minlength="2" required) 
      br
      label Description:*
        | 
        input(type="text", name="description" placeholder="Once upon a time..." required)  
      br
      label Added by:*
        | 
        input(type="text", name="added_by" placeholder="Enter your name" required) 
      br
      label Personal rating:*
        | 
        input(type="number", name="personal_rating" placeholder="10" required) 
      br
      label Artist image:
        | 
        input(type="file", name="avatar" accept="image/*") 
      hr
      button(type="submit") Submit

  if errors
    hr  
    ul
      each err in errors
        li= err.msg